{% extends 'templatedashboard.html.twig' %}




{% block body %}
{% include 'bootstrap.html.twig' %}
{{ block("navbar", "templatesite.html.twig") }}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper blanctexte">
    <h1>Bonjour, {{ app.user.Prenom }}</h1>

<div class="dashbg">
    Rang {{ app.user.rang}}
    <ul>
    <li>Points : {{ app.user.Points }}</li>

    {% if app.user.Points < 10 %}
        <li>
            Il vous reste {{ 10 - app.user.Points }} points pour passer au rang suivant.
        </li>
    {% elseif app.user.Points >= 10 and app.user.Points < 30 %}
        <li>
            Il vous reste {{ 30 - app.user.Points }} points pour passer au rang suivant.
        </li>
    {% endif %}
    </ul>
</div>
</div>
{% endblock %}
